{
  "manifest_version": 3,
  "name": "TabMan",
  "version": "1.0",
  "description": "Press a shortcut to open a new tab.",
  "icons": {
    "128": "icon.jpg"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "notifications",
    "bookmarks",
    "storage",
    "system.display"
  ],
  "omnibox": { "keyword" : "l" },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "new-tab": {
      "suggested_key": {
        "default": "Ctrl+T"
      },
      "description": "Open a new tab"
    }
  }
}
